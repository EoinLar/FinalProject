<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.eoinl.fantasygaa.userTeamActivity"
        android:background="@drawable/gaelic_pitch_diagram">

    <Button
            android:text="LFF"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/btnLFF"
            android:layout_marginLeft="16dp" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btnCFF" android:layout_marginRight="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btnLHF"
            app:layout_constraintHorizontal_bias="0.505"/>
    <Button
            android:text="RHF"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/btnRHF"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintLeft_toRightOf="@+id/btnCHF"
            android:layout_marginLeft="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnRM"/>
    <Button
            android:text="LHB"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/btnLHB"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toLeftOf="@+id/btnCHB"
            android:layout_marginRight="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnLFB" app:layout_constraintHorizontal_bias="0.505"/>
    <Button
            android:text="LFB"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/btnLFB"
            app:layout_constraintRight_toLeftOf="@+id/btnCFB" android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp" app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnGK" app:layout_constraintHorizontal_bias="0.505"/>
    <Button
            android:text="CFB"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/btnCFB"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btnGK"
            android:layout_marginRight="16dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="16dp" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.501"/>
    <Button
            android:text="CHF"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/btnCHF"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnRM" android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintHorizontal_bias="0.501"/>
    <Button
            android:text="RFF"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/btnRFF"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnRHF" android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintLeft_toRightOf="@+id/btnCFF"
            android:layout_marginLeft="16dp"/>
    <Button
            android:text="CFF"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/btnCFF"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnCHF" app:layout_constraintHorizontal_bias="0.501"/>
    <Button
            android:text="LHF"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/btnLHF"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnLM" android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toLeftOf="@+id/btnCHF"
            android:layout_marginRight="16dp"/>
    <Button
            android:text="LM"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/btnLM"
            app:layout_constraintLeft_toRightOf="@+id/btnLHB" android:layout_marginLeft="16dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/btnRM"/>
    <Button
            android:text="RM"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/btnRM"
            app:layout_constraintRight_toLeftOf="@+id/btnRHB" android:layout_marginRight="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btnCHB"/>
    <TextView
            android:text="User Name"
            android:layout_width="365dp"
            android:layout_height="41dp"
            android:id="@+id/userTeamName"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
            android:text="CHB"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/btnCHB"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnCFB" app:layout_constraintHorizontal_bias="0.501"/>
    <Button
            android:text="RFB"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/btnRFB"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintLeft_toRightOf="@+id/btnCFB"
            android:layout_marginLeft="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnGK"/>
    <Button
            android:text="RHB"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/btnRHB"
            app:layout_constraintLeft_toRightOf="@+id/btnCHB"
            android:layout_marginLeft="16dp" android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnRFB"/>
    <Button
            android:text="GK"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/btnGK"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/userTeamName" android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.501"/>
    <ImageButton
            android:text="CFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:src="@drawable/jersey_white_red"
            android:id="@+id/imageBtn1" android:layout_marginRight="8dp"
            android:background="@null"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintHorizontal_bias="0.501"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btnCFF"
    />
    <TextView
            android:text="FFselect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/FFselect" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageBtn1"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"/>

</android.support.constraint.ConstraintLayout>
