<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.eoinl.fantasygaa.MainActivity">

    <Button
            android:text="View Teams"
            android:layout_width="0dp"
            android:layout_height="82dp"
            android:id="@+id/button2"
            android:layout_marginLeft="16dp" app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="16dp" app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnViewFixtures" android:onClick="viewTeams"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/etEmailAddress"
            app:layout_constraintBaseline_toBaselineOf="@+id/button"
            app:layout_constraintRight_toLeftOf="@+id/button" android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            android:hint="Enter Email Address" android:selectAllOnFocus="false"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:id="@+id/tvValidEmail"
            app:layout_constraintRight_toLeftOf="@+id/button" android:layout_marginRight="8dp"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@+id/etEmailAddress" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:onClick="checkEmailAddress" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="View Fixtures"
            android:layout_width="0dp"
            android:layout_height="82dp"
            android:id="@+id/btnViewFixtures" android:onClick="viewFixtures"
            android:layout_marginLeft="16dp" app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="16dp" app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>

</android.support.constraint.ConstraintLayout>
