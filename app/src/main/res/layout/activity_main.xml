<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.eoinl.fantasygaa.MainActivity">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/etEmailAddress"
            app:layout_constraintBaseline_toBaselineOf="@+id/button"
            app:layout_constraintRight_toLeftOf="@+id/button" android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            android:hint="Enter Email Address" android:selectAllOnFocus="false"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:id="@+id/tvValidEmail"
            app:layout_constraintRight_toLeftOf="@+id/button" android:layout_marginRight="8dp"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@+id/etEmailAddress" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="41dp"
            android:id="@+id/button" android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:onClick="checkEmailAddress"/>

</android.support.constraint.ConstraintLayout>
